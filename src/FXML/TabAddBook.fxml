<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="8.0" prefHeight="250" prefWidth="800" vgap="8.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="Controller.TabAddBookController">
    <stylesheets>
        <URL value="@/css/styleSheet.css" />
    </stylesheets>
    <children>
        <Label styleClass="labelHeader" text="Thông tin sách" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
                                                
        <Label text="Tựa sách:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                                
        <Label text="Tác giả:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                                
        <Label text="Thể loại:" GridPane.columnIndex="0" GridPane.rowIndex="3" />   
                                                
        <Label text="Nhà xuất bản:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                                
        <Label text="Năm xuất bản:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                                    
        <TextField fx:id="txtBookTitle" 
                   minWidth="150" 
                   GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                                
        <TextField fx:id="txtAuthor" 
                   minWidth="150" 
                   GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                                
        <ComboBox fx:id="cbGenre" 
                  editable="false" 
                  minWidth="150" 
                  GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                                
        <ComboBox fx:id="cbPublisher" 
                  editable="true" 
                  minWidth="150" 
                  GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                                
        <TextField fx:id="txtYearPublished" 
                   minWidth="150" 
                   GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                   
        <Separator orientation="VERTICAL" GridPane.columnIndex="2" GridPane.rowSpan="6" />
                                    
        <Label styleClass="labelHeader" text="Thêm sách" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="0" />
                                                
        <Label fx:id="lbAddBookStatus" 
               styleClass="note"
               text="Bấm để thêm sách"
               GridPane.halignment="CENTER" 
               GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                                                
        <Button fx:id="butAddBook"
                onAction="#butAddBkAction" 
                text="Thêm sách" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
                                    
        <HBox alignment="CENTER_LEFT" spacing="4" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="3">
            <children>
                <Label styleClass="labelHeader" text="Sửa sách" />
                <Label fx:id="lbUpdateBookId" maxWidth="250" text="This is a long book title that should be wrap in one line with eclipes at the end" />
            </children>
        </HBox>
                                                
        <HBox alignment="CENTER" spacing="4" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="4" GridPane.rowSpan="2">
         <children>
                                                      
              <Button fx:id="butUpdateBook" 
                      onAction="#butUpdateBkAction" 
                      text="Cập nhật thông tin" />
            <Button 
                    onAction="#butDelBkAaction" 
                    text="Xóa sách" />
         </children>
        </HBox> 
                                           
    </children>
  
</GridPane>
